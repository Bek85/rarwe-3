<div class="rr-controls-panel">
  <div class="rr-sort-panel">
    <select
      class="rr-select"
      data-test-rr="sort-selector"
      {{on "change" this.updateSortBy}}
    >
      <option
        value="ratingDesc"
        data-test-rr="sort-by-rating-desc"
        selected={{eq this.sortBy "ratingDesc"}}
      >
        By rating, descending
      </option>
      <option
        value="ratingAsc"
        data-test-rr="sort-by-rating-asc"
        selected={{eq this.sortBy "ratingAsc"}}
      >
        By rating, ascending
      </option>
      <option
        value="titleDesc"
        data-test-rr="sort-by-title-desc"
        selected={{eq this.sortBy "titleDesc"}}
      >
        By title, descending
      </option>
      <option
        value="titleAsc"
        data-test-rr="sort-by-title-desc"
        selected={{eq this.sortBy "titleAsc"}}
      >
        By title, ascending
      </option>
    </select>
  </div>
  <div class="rr-search-panel">
    <Input
      @type="text"
      class="rr-input"
      @value={{this.searchTerm}}
      data-test-rr="search-box"
    />
    <div class="rr-search-icon">
      {{fa-icon "search"}}
    </div>
  </div>
</div>
<ul class="rr-list">
  {{#each this.sortedSongs as |song|}}
    <li class="rr-list-item" data-test-rr="song-list-item">
      {{capitalize song.title}}
      <span class="rr-rating fr">
        <RatingStar
          class="fr"
          @rating={{song.rating}}
          @onClick={{fn this.updateRating song}}
          {{! as |stars| }}
        >
          {{!-- {{#each this.stars as |star|}}
            <span
              class="glyphicon
                {{if star.isFull "glyphicon-star" "glyphicon-star-empty"}}"
            ></span>
          {{/each}} --}}
        </RatingStar>
      </span>
    </li>
  {{else}}
    <li class="tc">
      No
      {{capitalize this.model.name}}
      songs yet, why don't you
      <a href="#" {{on "click" this.addSong}}>
        create one?
      </a>
    </li>
  {{/each}}
</ul>
<div class="rr-new-label">
  {{#if this.isAddingSong}}
    <form
      class="rr-inline-form"
      data-test-rr="new-song-form"
      {{on "submit" this.saveSong}}
    >
      <Input
        @type="text"
        @value={{this.newSongTitle}}
        class="rr-input"
        placeholder={{this.newSongTitle}}
        data-test-rr="new-song-input"
      />
      <div class="rr-inline-form-group ml-auto">
        <button
          type="submit"
          class="rr-action-button"
          disabled={{this.isAddButtonDisabled}}
          data-test-rr="new-song-button"
        >
          Add
        </button>
        <button
          type="button"
          class="rr-cancel-icon"
          {{on "click" this.cancelAddSong}}
        >
          {{fa-icon "times"}}
        </button>
      </div>
    </form>
  {{else}}
    <button
      type="button"
      class="avenir bn bg-transparent near-white"
      data-test-rr="new-song-label"
      {{on "click" this.addSong}}
    >
      {{fa-icon "plus"}}
      Add New Song
    </button>
  {{/if}}
</div>
