<div class="rr-sidebar">
  <ul class="rr-list">
    {{#each this.model as |band|}}
      <li class="rr-list-item" data-test-rr="band-list-item">
        <LinkTo
          @route="bands.band"
          @model={{band.id}}
          class="rr-band-link"
          data-test-rr="band-link"
        >
          {{capitalize band.name}}
          <span class="rr-pointer">
            {{fa-icon "angle-right"}}
          </span>
        </LinkTo>
      </li>
    {{/each}}
  </ul>
  <div class="rr-new-label">
    {{#if this.isAddingBand}}
      <form class="rr-inline-form" {{on "submit" saveBand}}>
        <Input
          @type="text"
          @value={{this.newBandName}}
          class="rr-input"
          placeholder="New Band"
          data-test-rr="new-band-input"
        />
        <button
          type="button"
          class="rr-action-button"
          disabled={{this.isAddButtonDisabled}}
          data-test-rr="new-band-button"
          {{on "click" this.saveBand}}
        >
          Add
        </button>
        <button
          type="button"
          class="rr-cancel-icon"
          {{on "click" this.cancelAddBand}}
        >
          {{fa-icon "times"}}
        </button>
      </form>
    {{else}}
      <button
        type="button"
        class="avenir bn bg-transparent near-white"
        data-test-rr="new-band-label"
        {{on "click" this.addBand}}
      >
        {{fa-icon "plus"}}
        Add New Band
      </button>
    {{/if}}
  </div>
</div>
<div class="rr-main-panel">
  {{outlet}}
</div>
