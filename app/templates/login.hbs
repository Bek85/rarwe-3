<div class="rr-form-container">
  <h3 data-test-rr="form-header">
    Log in to R&R
  </h3>
  <form {{on "submit" (perform this.signIn)}}>
    <div class="rr-form-row-inline">
      <label for="email">
        Email
      </label>
      <Input
        @type="email"
        @value={{this.email}}
        class="rr-input ml-auto"
        id="email"
        {{on "blur" (fn this.setShowErrors "email")}}
      />
      {{#if this.showErrors.email}}
        <div class="rr-form-field-error" data-test-rr="email-error">
          {{v-get this "email" "message"}}
        </div>
      {{/if}}
    </div>
    <div class="rr-form-row-inline">
      <label for="password">
        Password
      </label>
      <Input
        @type="password"
        @value={{this.password}}
        class="rr-input ml-auto"
        id="password"
        autocomplete="password"
        {{on "blur" (fn this.setShowErrors "password")}}
      />
      {{#if this.showErrors.password}}
        <div class="rr-form-field-error" data-test-rr="password-error">
          {{v-get this "password" "message"}}
        </div>
      {{/if}}
    </div>
    <div class="rr-form-footer">
      <div class="rr-button-panel">
        <button
          type="submit"
          class="rr-action-button"
          data-test-rr="login-button"
          disabled={{v-get this "isInvalid"}}
        >
          Log In
        </button>
      </div>
      <div class="rr-cta">
        <span class="mr1">
          Don't have an account yet?
        </span>
        <LinkTo @route="sign-up" class="underline">
          Sign up now
        </LinkTo>
      </div>
    </div>
  </form>
</div>
{{outlet}}
